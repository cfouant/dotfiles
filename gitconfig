# vim: set ft=cfg:

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    st = status
    d = diff
    dt = difftool
    mt = mergetool
    dw = diff --word-diff
    co = checkout
    c = commit
    ca = commit --amend
    b = branch
    bm = branch --merged
    bum = branch --no-merged
    logme = log --author=\"Adam Price\"
    lst = log --stat
    fa = fetch --all --prune
    fat = fetch --all --prune --tags
    fuckit = reset --hard HEAD
    ctags = !.git/hooks/ctags
    wc = whatchanged -p
[user]
	name = Adam Price
	email = komidore64@gmail.com
[mergetool]
	keepBackup = false
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[apply]
    whitespace=fix
[diff]
    tool = vdiff
[merge]
    tool = vimdiff
[difftool "vdiff"]
    cmd = vimdiff -f $REMOTE $LOCAL
[tig]
    tab-size = 4
[help]
    autocorrect = 30
[init]
    templatedir = ~/.git_template
