# vim: set ft=cfg:

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    st = status -sb
    d = diff
    dt = difftool
    dw = diff --word-diff
    co = checkout
    b = branch
    bm = branch --merged
    bum = branch --no-merged
    llg = log -p
    logme = log --author=\"Adam Price\"
    lst = log --stat
    f = fetch
    fa = fetch --all
[user]
	name = Adam Price
	email = komidore64@gmail.com
[mergetool]
	keepBackup = false
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[apply]
    whitespace=fix
[diff]
    tool = vdiff
[difftool "vdiff"]
    cmd = vimdiff -f $REMOTE $LOCAL
[tig]
    tab-size = 4
